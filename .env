# Stepper Motor GPIO Pin Configuration
# These pins connect the Raspberry Pi to the TB6600 stepper motor drivers

# Azimuth Axis (Primary stepper motor)
AZ_DIR_PIN=23
AZ_STEP_PIN=24
AZ_ENABLE_PIN=25

# Elevation Axis (Secondary stepper motor)
EL_DIR_PIN=26
EL_STEP_PIN=27
EL_ENABLE_PIN=22

# Legacy single motor pins (for backward compatibility)
DIR_PIN=23
STEP_PIN=24
ENABLE_PIN=25

# WT901C-RS485 IMU Configuration
# Serial port for IMU communication (usually /dev/ttyUSB0 or /dev/ttyAMA0)
IMU_PORT=/dev/ttyUSB0

# Optional: Additional GPIO pins for future features
# Uncomment and modify as needed

# Limit switch input pins (for homing functionality)
# AZ_LIMIT_SWITCH_PIN=18
# EL_LIMIT_SWITCH_PIN=19

# Encoder pins (for closed-loop control)
# ENCODER_A_PIN=20
# ENCODER_B_PIN=21

# Emergency stop button pin
# EMERGENCY_STOP_PIN=21

# Status LED pins
# STATUS_LED_PIN=22
# ERROR_LED_PIN=27

# Motor Configuration Overrides
# These can override settings in motor_config.yaml if needed

# Motor specifications
# STEPS_PER_REVOLUTION=200
# MICROSTEP_MULTIPLIER=1

# Speed settings (steps per second)
# DEFAULT_SPEED=100
# MIN_SPEED=1
# MAX_SPEED=1000

# Safety settings
# OPERATION_TIMEOUT=300
# EMERGENCY_STOP_ENABLED=true

# Logging configuration
# LOG_LEVEL=INFO
# LOG_TO_FILE=false
# LOG_MOTOR_MOVEMENTS=true

# Hardware-specific settings
# TB6600 driver current setting (50, 70, or 100 percent)
# DRIVER_CURRENT_SETTING=70

# Power supply voltage
# SUPPLY_VOLTAGE=24

# Development and debugging
# DEBUG_MODE=false
# VERBOSE_OUTPUT=false